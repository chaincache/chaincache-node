{
    "compilerOptions": {
        "lib": ["es5", "es6", "es7"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "removeComments": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "esModuleInterop": true
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}